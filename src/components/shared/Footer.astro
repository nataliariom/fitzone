---
import FooterLogo from "../../assets/images/logo/footer-logo.png";
---

<footer>
  <div class="container">
    <!-- T√≠tulo -->
    <div class="text-center w-full md:w-11/12 lg:w-4/5 xl:w-[80%] mx-auto py-10">
      <h2 class="d2c_title">
        Subscribe to Our <br />
        <span class="text-outline">Newsletter</span>
      </h2>
      <p class="w-full md:w-4/5 xl:w-3/4 mx-auto">
        Stay updated with the latest news, events, and promotions from GymKear by subscribing to our newsletter.
      </p>

      <!-- Formulario -->
      <form id="newsletter-form">
        <div class="flex flex-col md:flex-row items-center max-w-2xl mx-auto mt-8">
          <div class="w-full md:w-auto flex-1 mb-6 md:mb-0">
            <input
              type="email"
              id="email"
              required
              class="form-control d2c_card_bg rounded md:rounded-r-none"
              placeholder="Enter your email address"
            />
          </div>
          <button
            type="submit"
            class="w-full md:w-auto px-4 md:px-10 py-2 pt-2 rounded uppercase font-primary font-normal text-2xl md:text-3xl inline-block border transition-all d2c_btn_primary -ml-[1px]"
          >
            Subscribe Now
          </button>
        </div>
      </form>
      <div id="subscribe-toast" class="mt-4 text-green-500 font-secondary text-xl hidden">
        Subscribed successfully!
      </div>
    </div>

    <!-- Nav del footer -->
    <div class="grid grid-cols-12 gap-6 py-8 border-y border-y-greenish-gray">
      <div class="col-start-1 col-span-12 md:col-span-6 lg:col-span-3 md:order-1">
        <div class="text-center flex justify-center md:justify-start">
          <a href="/" id="home-link">
            <img
              src={FooterLogo.src}
              alt="Logo"
              width="265"
              height="80"
              class="max-w-[180px] xl:max-w-[265px] h-auto"
              loading="lazy"
            />
          </a>
        </div>
      </div>

      <div class="col-start-1 col-span-12 lg:col-start-4 lg:col-span-6 flex justify-center md:order-3 lg:order-2">
        <ul class="flex gap-2 md:gap-4 flex-wrap justify-center">
          <li><a href="#home" class="d2c_footer_link">Home</a></li>
          <li><a href="#about" class="d2c_footer_link">About</a></li>
          <li><a href="#services" class="d2c_footer_link">Services</a></li>
          <li><a href="#gallery" class="d2c_footer_link">Gallery</a></li>
          <li><a href="#pricing" class="d2c_footer_link">Pricing</a></li>
          <li><a href="#team" class="d2c_footer_link">Team</a></li>
          <li><a href="#testimonial" class="d2c_footer_link">Testimonial</a></li>
          <li><a href="#contact" class="d2c_footer_link">Contact</a></li>
        </ul>
      </div>

      <div class="col-start-1 col-span-12 md:col-start-7 md:col-span-6 lg:col-start-10 lg:col-span-3 md:order-2 lg:order-3">
        <div class="flex justify-center md:justify-end gap-3">
          <a href="#" class="d2c_social_link" aria-label="Facebook">üìò</a>
          <a href="#" class="d2c_social_link" aria-label="Twitter">üê¶</a>
          <a href="#" class="d2c_social_link" aria-label="LinkedIn">üíº</a>
          <a href="#" class="d2c_social_link" aria-label="YouTube">‚ñ∂Ô∏è</a>
        </div>
      </div>
    </div>

    <!-- Copy -->
    <div class="p-3 text-center">
      <p class="text-[#354844] no-animation">
        All rights reserved by DesignToCodes
      </p>
    </div>
  </div>

  <script is:inline>
    document.getElementById("newsletter-form")?.addEventListener("submit", function (e) {
      e.preventDefault();
      const toast = document.getElementById("subscribe-toast");
      toast?.classList.remove("hidden");
      setTimeout(() => toast?.classList.add("hidden"), 3000);
      this.reset();
    });
  </script>
</footer>
